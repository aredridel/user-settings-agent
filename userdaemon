#!/usr/bin/env ruby

require 'socket'
require 'etc'

TIMEOUT = 1800 # Daemon shuts down after half an hour of non-use

def random_string(length=10)
	chars = 'abcdefghjkmnpqrstuvwxyzABCDEFGHJKLMNPQRSTUVWXYZ23456789'
	password = ''
	length.times { password << chars[rand(chars.size)] }
	password
end

DIR = "/tmp/userdaemon-#{Process.uid}"
KEY = random_string

e = Etc.getpwuid(Process.uid)
Dir.chdir(e.dir)

begin
	Dir.mkdir(DIR, 0755)
rescue Errno::EEXIST
end

um = File.umask(0000)
serv = UNIXServer.new("#{DIR}/sock")
File.umask(um)

puts "SOCKET="+DIR+'/sock'
puts "KEY="+KEY

Kernel.exit! if fork

if(!STDIN.tty?) 
	Process.setsid
	STDIN.close
	STDOUT.close
	STDERR.close
	Kernel.exit! if fork
end

socks = {}

at_exit do
	File.unlink(DIR+'/sock')
end

class Handler
	def initialize(sock)
		@closed = false
		@queue = []
		@sock = sock
		@state = :do_key
	end

	def handle_read
		begin
			l = @sock.readline
			send(@state, l)
		rescue EOFError
			self.close
		end
	end

	def do_key(key)
		if(key.strip != KEY)
			puts "Bad key: #{key}"
			close
		else
			@queue << "200 OK\n"
			@state = :do_command
		end
	end

	def do_command(l)
		cmd, args = l.strip.split(/ /, 2)
		cmd ||= ''
		begin
			send("cmd_" + cmd.upcase, args)
		rescue NoMethodError => e
			puts e if STDIN.tty?
			queue "400 BAD\n"
		rescue
			puts $! if STDIN.tty?
			queue "500 INTERNAL ERROR\n"
			@state = :do_command
		end
	end

	def cmd_SHUTDOWN(args)
		queue("200 OK\n")
		queue :finish_SHUTDOWN
	end

	def finish_SHUTDOWN
		exit
	end

	def cmd_PUT(file)
		@fd = File.open(file, 'w')
		queue "100 Continue\n"
		@state = :do_data
		@command = 'PUT'
	end

	def data_PUT(data)
		@fd.write(data)
	end

	def finish_PUT
		@fd.close
		queue "200 OK\n"
	end

	def cmd_APPEND(file)
		@fd = File.open(file, 'a')
		queue "100 Continue\n"
		@state = :do_data
		@command = "APPEND"
	end

	def data_APPEND(line)
		@fd.write(line)
	end

	def finish_APPEND(line)
		@fd.close
		queue "200 OK\n"
	end

	def cmd_MKDIR(dir)
		begin
			Dir.mkdir(dir)
		rescue Errno::EEXIST
			queue "412 Already exists\n"
		else
			queue "201 Created\n"
		end
	end

	def cmd_QUIT(file)
		queue "200 OK\n"
		queue :close
	end

	def do_data(l)
		if(l.strip == '.')
			send('finish_'+@command)
			@command = nil
			@state = :do_command
		else
			if(l[0,2] == '..')
				l = l[1,-1]
			end
			send('data_'+@command, l)
		end
	end

	def queue(l)
		@queue << l
	end

	def handle_write
		a = @queue.shift
		if(a.instance_of? Symbol)
			send(a)
		else
			begin
				@sock.write(a)
			rescue Errno::EPIPE
				close
			end
		end
	end

	def writable?
		!@queue.empty?
	end

	def handle_error
		close
	end

	def close
		send('finish_'+@command) if(@command) 
		@closed = true
		@sock.close
	end

	def closed?
		@closed
	end

end

def safe
	begin
		yield
	rescue EOFError
	end
end

while(status = select((serv ? [serv] : [])+ socks.keys, socks.select { |k,v| k if v.writable? }.map {|e| e[0]}, (serv ? [serv] :[]) + socks.keys, TIMEOUT))
	r,w,e = *status

	e.each do |sock|
		if socks[sock]
			safe { socks[sock].handle_error }
			socks.delete(sock)
		end
		if sock == serv
			serv = false
		end
		if r.include? sock
			r.delete sock
		end
		if w.include? sock
			w.delete sock
		end
	end

	r.each do |sock|
		if(sock == serv)
			a = serv.accept
			socks[a] = Handler.new(a)
		else
			safe { socks[sock].handle_read }
		end
		next
	end

	w.each do |sock|
		safe { socks[sock].handle_write }
		next
	end

	socks.keys.each do |sock|
		if(socks[sock].closed?)
			socks.delete(sock)
		end
	end

	if !serv and socks.empty?
		exit
	end

end
